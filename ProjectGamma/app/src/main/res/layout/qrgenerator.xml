<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    >


    <TextView
        android:id="@+id/Name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="Name: "
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SN_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/Name_tv"
        android:gravity="center"
        android:text="Student No: "
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Course_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Course Tutored: "
        android:textSize="22sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/Date_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SN_tv"

        android:gravity="center"
        android:text="Date: "
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Venue_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/Venue_tv"
        android:gravity="center"
        android:text="Venue: "
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Dur_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Venue_tv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Time: "
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Dur_tv"/>

    <Button
        android:id="@+id/Generate_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:onClick="generate"
        android:text="generate"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/Home_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:onClick="doneGen"
        android:text="Home"
        android:textSize="16sp"
        tools:ignore="OnClick" />

</LinearLayout>