<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"

        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="29dp"
        android:text="Course Tutored: "
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/increase"
        android:layout_width="56dp"
        android:layout_height="44dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="14dp"
        android:onClick="increase"
        android:text="+"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="109dp"
        android:text="0 hrs : 00 min"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/decrease"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@+id/increase"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="282dp"
        android:onClick="decrease"
        android:text="-"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="90dp"
        android:text="Venue: "
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />




    <Spinner
        android:id="@+id/spinner"
        android:layout_width="167dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="212dp" />


    <Button
        android:id="@+id/Confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:onClick="send"
        android:text="CONFIRM" />

    <EditText
        android:id="@+id/enterVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/venue"
        android:layout_alignBottom="@+id/venue"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Venue"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/TimeError"
        android:layout_width="372dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="23dp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:visibility="visible" />


</RelativeLayout>