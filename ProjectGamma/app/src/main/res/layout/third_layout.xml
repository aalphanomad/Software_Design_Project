<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="PLEASE FILL IN THE FORM"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="159dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="239dp" />

    <Button
        android:id="@+id/showAlertID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="59dp"
        android:text="Select Courses" />

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="29dp"
            android:text="Course Tutored: "
            android:textAllCaps="true"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/course"
            android:layout_marginTop="87dp"
            android:text="Venue: "
            android:textAllCaps="true"
            android:textSize="20sp" />


    <Button
        android:id="@+id/increase"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/textView12"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="606dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="79dp"
        android:onClick="increase"
        android:text="+"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/increase"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="154dp"
        android:text="0 hrs : 00 min"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/decrease"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_alignBaseline="@+id/increase"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignTop="@+id/increase"
        android:layout_marginStart="-13dp"
        android:layout_marginLeft="-13dp"
        android:layout_marginTop="1dp"
        android:onClick="decrease"
        android:text="-"
        android:textAlignment="center" />


        <Button
            android:id="@+id/Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="send"
            android:text="CONFIRM" />




        <EditText
            android:id="@+id/enterVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/venue"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="294dp"
            android:layout_marginEnd="109dp"
            android:ems="10"
            android:inputType="textPersonName" />


</RelativeLayout>
