<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fillViewport="true">


    <RelativeLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">




        <EditText
            android:id="@+id/name"
            android:layout_width="359dp"

            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/password"
            android:layout_width="364dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textWebPassword" />

        <EditText
            android:id="@+id/cpassword"
            android:layout_width="359dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="405dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPersonName|textWebPassword" />

        <Button
            android:id="@+id/test"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="801dp"
            android:layout_marginEnd="129dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#b18d5b"
            android:onClick="onClick"
            android:text="Register"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/name_label"
            android:layout_width="95dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="295dp"
            android:layout_marginBottom="8dp"
            android:text="Name" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="132dp"
            android:layout_height="33dp"
            android:layout_alignTop="@+id/name_label"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="263dp"
            android:layout_marginBottom="8dp"
            android:text="Email" />

        <TextView
            android:id="@+id/SN_label"
            android:layout_width="170dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="226dp"
            android:layout_marginBottom="8dp"
            android:text="Student number" />

        <TextView
            android:id="@+id/password_label"
            android:layout_width="129dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="268dp"
            android:layout_marginBottom="8dp"
            android:text="Password" />

        <TextView
            android:id="@+id/cpassword_label"
            android:layout_width="169dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="383dp"
            android:layout_marginEnd="233dp"
            android:layout_marginBottom="8dp"
            android:text="Confirm Password" />


        <EditText
            android:id="@+id/SN_TB"
            android:layout_width="366dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="133dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Student Number"
            android:inputType="text" />

        <TextView
            android:id="@+id/AG_email"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="225dp"
            android:layout_marginEnd="27dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="482dp"
            android:layout_marginEnd="0dp"
            android:text="Are you on Postgraduate Merit Award(PMA)?" />


        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="98dp"
            android:layout_height="55dp"
            android:layout_alignStart="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="295dp"
            android:layout_marginTop="464dp"
            android:layout_marginEnd="18dp"
            android:text="(Select)"
            android:textColor="#ffffff"
            android:visibility="visible" />


        <Button
            android:id="@+id/showAlertID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="555dp"
            android:layout_marginEnd="21dp"
            android:backgroundTint="#003b5c"
            android:elevation="20dp"
            android:text="Select Courses"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/Course_err"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="513dp"
            android:layout_marginEnd="15dp"
            android:text="Please select the courses that you would like to tutor.          (Max 5)" />

        <Spinner
            android:id="@+id/Degree_Spinner"
            android:layout_width="204dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="549dp"
            android:layout_marginEnd="180dp" />

        <TextView
            android:id="@+id/Course1"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="640dp"
            android:layout_marginEnd="15dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Course2"
            android:layout_width="389dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="667dp"
            android:layout_marginEnd="14dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Course3"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="694dp"
            android:layout_marginEnd="15dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Course4"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="722dp"
            android:layout_marginEnd="15dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Course5"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="752dp"
            android:layout_marginEnd="15dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Course_mes"
            android:layout_width="255dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="610dp"
            android:layout_marginEnd="156dp"
            android:text="Your selected courses are:" />

        <TextView
            android:id="@+id/Course_Error"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="663dp"
            android:layout_marginEnd="116dp"
            android:textColor="#ff0000" />


        <Button
            android:id="@+id/upload_but"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="739dp"
            android:layout_marginEnd="14dp"
            android:backgroundTint="#003b5c"
            android:elevation="20dp"
            android:text="Upload Transcript"
            android:textColor="#ffffff"
            android:textSize="12sp" />


    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>